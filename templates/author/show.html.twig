{% extends 'library.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.Name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ author.Surname }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ author.Country }}</td>
            </tr>
            <tr>
                <th>BirthYear</th>
                <td>{{ author.birthYear ? author.birthYear|date('Y') : '' }}</td>
            </tr>
            <tr>
                <th>DeathYear</th>
                <td>{{ author.deathYear ? author.deathYear|date('Y') : ''}}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.Name }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ genre.Name }}</td>
            </tr>

            <tr>
                <th>Date of publishment </th>
                <td>{{ book.dateOfPublishment }}</td>
            </tr>
            <tr>
                <th><button type="button">Click Me!</button></th>
                <td></td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('author_index') }}">back to list</a>

    <a href="{{ path('author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}
{% endblock %}
