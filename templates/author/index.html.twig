{% extends 'library.html.twig' %}

{% block title %}Author index{% endblock %}

{% block body %}
    <h1>Author index</h1>

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Country</th>
                <th scope="col">BirthYear</th>
                <th scope="col">DeathYear</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.Name }}</td>
                <td>{{ author.Surname }}</td>
                <td>{{ author.Country }}</td>
                <td>{{ author.birthYear ? author.birthYear|date('Y-m-d') : '' }}</td>
                <td>{{ author.deathYear ? author.deathYear|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('author_show', {'id': author.id}) }}">show</a>
                    <a href="{{ path('author_edit', {'id': author.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('author_new') }}">Create new</a>
{% endblock %}
