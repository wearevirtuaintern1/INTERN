{% extends 'base.html.twig' %}


{% for category in product_category %}
    {% block title %}{{ product_category.name }}{% endblock %}
{% endfor %}


{% block body %}
    <h1>ProductCategory</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th scope="col">Id</th>
                <td>{{ product_category.id }}</td>
            </tr>
            <tr>
                <th scope="col">Name</th>
                <td>{{ product_category.name }}</td>
            </tr>
            <tr>
                <th scope="col">Description</th>
                <td>{{ product_category.description }}</td>
            </tr>
            <tr>
                <th scope="col">Date_of_creation</th>
                <td>{{ product_category.dateOfCreation|date("m/d/Y") }}</td>
            </tr>
            <tr>
                <th scope="col">Date_of_last_modification</th>
                <td>{{ product_category.dateOfLastModification|date("m/d/Y") }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_category_index') }}">back to list</a>

    <a href="{{ path('product_category_edit', {'id': product_category.id}) }}">edit</a>

    {{ include('product_category/_delete_form.html.twig') }}
{% endblock %}
