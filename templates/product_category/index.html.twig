{% extends 'base.html.twig' %}

{% block title %}ProductCategory index{% endblock %}

{% block body %}
    <h1>ProductCategory index</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Date_of_creation</th>
                <th scope="col">Date_of_last_modification</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_category in product_categories %}
            <tr>
                <td>{{ product_category.id }}</td>
                <td>{{ product_category.name }}</td>
                <td>{{ product_category.description }}</td>
               <td>{{ product_category.dateOfCreation|date("Y") }}</td>
                <td>{{ product_category.dateOfLastModification|date("Y") }}</td>
                <td>
                    <a href="{{ path('product_category_show', {'id': product_category.id}) }}">show</a>
                    <a href="{{ path('product_category_edit', {'id': product_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_category_new') }}">Create new</a>
{% endblock %}
